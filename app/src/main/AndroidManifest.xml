    package="com.example.briefing_android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
         android:theme="@style/Theme.Briefing_Android">
        <activity android:name=".main.HistoryActivity" />
        <activity android:name=".main.MainActivity">
        </activity>
        <activity android:name=".summary.SummaryActivity" />
        <activity android:name=".sign.SignInIdActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".sign.SignInPwActivity" />
        <activity android:name=".sign.SignUpPwActivity" />
        <activity android:name=".sign.SignUpIdActivity" />
        <activity android:name=".sign.SignUpSuccessActivity"/>

    </application>

    <uses-permission android:name="android.permission.INTERNET"/>

</manifest>