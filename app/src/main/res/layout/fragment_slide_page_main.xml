<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.MainActivity">

    <TextView
        style="@style/SigntitleTextView"
        android:text="@string/apptitle"
        android:textColor="@color/colorMain"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="30dp"/>

    <TextView
        android:id="@+id/text_url"
        style="@style/SignexTextView"
        android:text="영상의 주소를 입력해주세요"
        app:layout_constraintBottom_toTopOf="@id/edit_url"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <EditText
        android:id="@+id/edit_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="313dp"
        android:layout_marginRight="30dp"
        android:hint="url입력"
        android:text="https://www.youtube.com/watch?v=sWuerIFLjjk"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

<!--    https://www.youtube.com/watch?v=50J4rwm4zME-->

    <ImageButton
        android:id="@+id/clear_url"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="#00000000"
        android:src="@drawable/ic_clear"
        app:layout_constraintBottom_toBottomOf="@id/edit_url"
        app:layout_constraintEnd_toEndOf="@id/edit_url" />


    <Button
        android:id="@+id/btn_serach"
        style="@style/BtnStyle"
        android:layout_marginTop="360dp"
        android:enabled="false"
        android:text="검색"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        style="@style/Signex2TextView"
        android:id="@+id/logout"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        android:text=""/>


</androidx.constraintlayout.widget.ConstraintLayout>